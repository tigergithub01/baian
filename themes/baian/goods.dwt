	/*选择地址**/
	function select_address(){
		//设置选择的地址
		var addr_province_name= $("#store-selector").find("[data-widget='tab-item'][data-index='0'] a").attr('title');
		var addr_city_name=     $("#store-selector").find("[data-widget='tab-item'][data-index='1'] a").attr('title');
