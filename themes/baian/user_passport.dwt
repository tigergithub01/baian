						noticeAssign(-1);
					}else if(/[0-9]+/.test(string) && /\W+\D+/.test(string)) {
						noticeAssign(-1);
					}else{
						noticeAssign(0);
					}
				}
			}else{
				noticeAssign(null);	
			}
		}
		
		function noticeAssign(num) {
