                            <td><input type="password" id="conform_password" placeholder="请再输入密码" name="confirm_password" class="text"  onblur="check_conform_password(this.value);" autocomplete="off"/>   <span class="clr"></span>
                    		<label id="conform_password_notice" style="color:#900;"></label></td>
                        </tr>
				       	<tr id='row_verify_phone'> 
				         <th>短信验证码：</th>
				          <td colspan="2">				        
				          	<input name="mobile_code" id="mobile_code" type="text" style="width:80px;"class="inputBg"/>
